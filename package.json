{
  "name": "logux-status",
  "version": "0.1.0",
  "description": "Display Logux synchronization status in browser",
  "keywords": [
    "logux",
    "client"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "logux/logux-status",
  "dependencies": {
    "browser-supports-log-styles": "^1.1.6"
  },
  "devDependencies": {
    "docdash": "^0.4.0",
    "eslint": "^3.16.0",
    "eslint-config-logux": "^6.0.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-es5": "^1.0.1",
    "eslint-plugin-jest": "^19.0.0",
    "eslint-plugin-promise": "^3.4.2",
    "eslint-plugin-standard": "^2.0.1",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.0",
    "jsdoc": "^3.4.3",
    "json-loader": "^0.5.4",
    "lint-staged": "^3.3.1",
    "logux-client": "logux/logux-client",
    "logux-core": "logux/logux-core",
    "logux-sync": "logux/logux-sync",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.0",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-bundle-analyzer": "^2.3.0",
    "webpack-dev-server": "^2.4.1",
    "yaspeller": "^3.0.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "yarn run cleandocs && yaspeller *.md docs/*.html",
    "cleandocs": "yarn run docs && rimraf docs/*.js.html",
    "clean": "rimraf docs/ coverage/ bundle-report.html",
    "lint": "eslint *.js test/*.js",
    "docs": "jsdoc --configure .jsdocrc *.js",
    "test": "jest --coverage && yarn run lint && yarn run spellcheck",
    "prebundle": "webpack index.js bundle/index.js",
    "bundle": "gzip -9 -f bundle/index.js",
    "postbundle": "ls -lh bundle/*.gz | awk '{print \"Size:\", $5\"B\"}'",
    "demo": "webpack-dev-server --content-base ./build --config demo/webpack.config",
    "demo-build": "node demo/build.js"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-logux/browser"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ]
}
